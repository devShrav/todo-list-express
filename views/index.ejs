<!-- html version declaration for the browser-->
<!DOCTYPE html>
<!-- language declaration for the browser -->
<html lang="en">
<!-- head declaration -->
<head>
    <!-- character encoding type  -->
    <meta charset="UTF-8">
    <!-- Internet Explorer Edge compatibility -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- default viewing area width set to the device width -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- title displayed on the tab -->
    <title>To DO List</title>
    <!-- linking CSS files fontawesome and local CSS files -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="css/style.css">
</head>
<!-- Content displayed in the browser -->
<body>
